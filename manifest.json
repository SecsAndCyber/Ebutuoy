{
  "name": "Ebutuoy",
  "version": "1.3",
  "description": "Avoid YouTube rabbit holes with Ebutuoy",
  "background": {
    "scripts": ["ebutuoy.js", "background.js"],
    "persistent": true
  },
  "permissions": [
    "webRequest", "webRequestBlocking"
  ],
  "host_permissions": [
    "https://*.youtube.com/",
    "https://i.ytimg.com/"
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "manifest_version": 3
}